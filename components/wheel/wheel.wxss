
.wheel_wp{
  width: 400rpx;
  height: 400rpx;
  position: relative;
  margin: 0 auto;
  background: #8f9641;
  padding: 20px 20px;
  border-radius: 400rpx;
}
.wheel_wp image{
  display: block;
  width: 100%;
  height: 100%;
}
.wheel_wp .wheel_pointer{
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  top: 50%;
  left: 50%;
  margin: -75rpx 0 0 -75rpx;
  transform-origin: 50% 50%;
}
.wheel_wp .wheel_pointer image{
  position: absolute;
  width: 150rpx;
  height: 238rpx;
  left: 0;
  top: -64rpx;
}