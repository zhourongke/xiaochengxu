.marquee_wp{
  margin: 76% 20rpx 20% 20rpx;
  display: flex;
  flex-wrap: wrap;
  background: #fb0338;
  padding: 10px 10px;
  border-radius: 10px;
}
.marquee_wp .marquee_item{
  width: 216rpx;
  height: 216rpx;
  margin: 0 10rpx 10rpx 0;
  opacity: .8;
  background: white;
  box-sizing: border-box;
  border-radius: 10px;
  border: 2px solid white;
}
.marquee_wp .marquee_item.on{
  background: yellow;
  opacity: 1;
}
.marquee_wp .marquee_item image{
  display: block;
  width: 100%;
  height: 100%;
}
.marquee_wp .marquee_item:nth-child(3n){
  margin-right: 0;
}
.marquee_wp .marquee_item_btn{
  background: #b311ad;
}
.marquee_wp .marquee_item_btn text{
  display: block;
  text-align: center;
  color: #feef00;
}
